<div class="page">
  <div class="container">
    <h1>Create new shiz-fiz</h1>
    <% if @article.errors.any? %>
    <ul>
      <% @article.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
    <% end %>
    <%= form_for @article do |f| %>
    <div>
      <%= f.label :title %>
      <%= f.text_field :title  %>
    </div>

    <div>
      <%= f.label :description %>
      <%= f.text_area :description %>
    </div>
    <div>
      <%= f.submit %>
    </div>

    <% end %>
  </div>
</div>

